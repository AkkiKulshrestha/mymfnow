<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">


        <android.support.v7.widget.CardView
            android:id="@+id/CardLumpsumRobo"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:padding="5dp"
            android:layout_weight="5"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#a640ac47">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lumpsum Robo"
                android:textColor="@color/black"
                android:padding="10sp"
                android:layout_gravity="bottom|end"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="20sp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CardSIP_Robo"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:padding="5dp"
            android:layout_weight="5"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#f17474">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIP Robo"
                android:textColor="@color/white"
                android:padding="10sp"
                android:layout_gravity="bottom|end"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="20sp"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CardRoboSavedPlans"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:padding="5dp"
            android:layout_weight="5"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#ffb742">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robo Saved Plans"
                android:textColor="@color/white"
                android:padding="10sp"
                android:layout_gravity="bottom|end"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="20sp"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CardRoboOnlineInvestment"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:padding="5dp"
            android:layout_weight="5"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#dd33ff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robo Based Online Investment"
                android:textColor="@color/white"
                android:padding="10sp"
                android:layout_gravity="bottom|end"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="20sp"/>


        </android.support.v7.widget.CardView>


    </LinearLayout>

   </LinearLayout>
 </ScrollView>
