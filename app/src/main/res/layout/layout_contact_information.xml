<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Communication Address"
        android:layout_margin="20sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Pin Code"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"/>

    <EditText
        android:id="@+id/Edt_AddressPincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pincode"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5dp"
        android:maxLength="6"
        android:imeOptions="actionNext"
        android:inputType="number"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address 1"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"/>

    <EditText
        android:id="@+id/Edt_Address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address 1"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address 2"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"/>

    <EditText
        android:id="@+id/Edt_Address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address 2"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address 3"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"/>

    <EditText
        android:id="@+id/Edt_Address3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address 3"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City of Residence"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"/>

    <EditText
        android:id="@+id/Edt_City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="State of Residence"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"/>

    <EditText
        android:id="@+id/Edt_State"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Type"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"/>

    <Spinner
        android:id="@+id/Spn_AddressType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spin_item_address_type"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5dp"
        />


</LinearLayout>